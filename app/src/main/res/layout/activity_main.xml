<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="69dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="30dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:text="4"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="5"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="6"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnMult" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:text="1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="3"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnminus" />


    <Button
        android:id="@+id/btn0"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:text="0"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />


    <Button
        android:id="@+id/btndecimal"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="."
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />


    <Button
        android:id="@+id/btnequal"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:text="="
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/btndecimal"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnequal"
        app:layout_constraintTop_toBottomOf="@+id/btnplus" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="136dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="Clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn0" />

    <Button
        android:id="@+id/btndelete"
        android:layout_width="129dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/btnclear"
        app:layout_constraintTop_toBottomOf="@+id/btndecimal" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


</androidx.constraintlayout.widget.ConstraintLayout>